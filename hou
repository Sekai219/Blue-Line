    body {
      margin: 0;
      font-family: 'Roboto', sans-serif;
      background-color: #1A1A1A;
      height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      color: #FFF;
      -webkit-tap-highlight-color: transparent; /* 禁用手机端点击时的蓝色遮罩 */
    }

    /* 上半部分 */
    .upper-half {
      width: 100%;
      height: 45vh; /* 占页面上半部分 */
      display: flex;
      justify-content: center;
      align-items: center;
      background-color: transparent; /* 设置为透明 */
      cursor: pointer;
    }

    /* 下半部分 */
    .lower-half {
      width: 100%;
      height: 45vh; /* 占页面下半部分 */
      display: flex;
      justify-content: center;
      align-items: center;
      background-color: transparent; /* 设置为透明 */
      cursor: pointer;
    }

    /* 水平中间的蓝色细线 */
    .middle-line {
      width: 100%;
      height: 2px;
      background-color: #4A90E2;
      animation: lineThicknessAnimation 2s forwards; /* 添加动画 */
    }

    /* 定义动画 */
    @keyframes lineThicknessAnimation {
      0% {
        height: 2px; /* 初始高度 */
      }
      50% {
        height: 10px; /* 加厚到10px */
      }
      100% {
        height: 2px; /* 恢复到初始高度 */
      }
    }

    /* 上下功能区域中的文字 */
    .upper-half span, .lower-half span {
      font-size: 24px;
      font-weight: 700;
    }

    /* 弹出的搜索框 */
    .search-popup {
      display: none;
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background-color: #1A1A1A;
      padding: 30px;
      width: 80%;
      max-width: 500px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      border-radius: 10px;
